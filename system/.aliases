################################## functions ##################################

function project {
    if [ "$1" = "" ]; then
        cd ~/Workspace/
        ls -al
    else
        source ~/Workspace/$1/bin/activate
        cd ~/Workspace/$1/
        ls -al
    fi
}
alias project=project

function makeenv {
	virtualenv . --distribute --no-site-packages
	source bin/activate
	mkdir project
	ls -al
}
alias makeenv=makeenv

